---
interface Props {
    path: string;
}

const { path } = Astro.props;

const directories = ["skills", "projects", "blogs"];
---

<nav
    class="grid sm:flex
    justify-between
    border-[0.25vh] sm:border-[0.125vw]
    border-[var(--alt)]
    border-solid
    mb-[7vw] sm:mb-[1.5625vw]
    p-[3vw] sm:p-[1vw]"
>
    <span class="mr-[2.5vh] text-[5vw] sm:mr-[2.5vw] sm:text-[1.375vw]"
        >/home/kyren/{path}</span
    >
    <span
        id="nav-links"
        class="mb-0 mx-[0.2vw] text-[5vw]
        mx-[0.2vw] sm:text-[1.375vw]"
    >
        <a href="/">home</a>
        {
            directories.map((dir) => (
                <>
                    <a href={`/${dir}`}>{dir}</a>
                </>
            ))
        }
    </span>
</nav>

<style>
    #nav-links a {
        color: var(--primary);
    }
    #nav-links a:hover {
        color: var(--accent);
    }
</style>
